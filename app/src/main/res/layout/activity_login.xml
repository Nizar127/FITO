<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE88A"
    tools:context=".Login">

    <TextView
        android:id="@+id/signUpBtn"
        android:layout_width="280dp"
        android:layout_height="37dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="Don't have an account? Sign Up"
        android:textColor="@color/purple_500"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginsignin"
        app:layout_constraintVertical_bias="0.181"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/loginsignin"
        android:layout_width="287dp"
        android:layout_height="47dp"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginTop="20dp"
        android:background="#423A30"
        android:fontFamily="@font/open_sans_light"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#423A30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginpassword"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/pleasesignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cairo_semibold"
        android:gravity="center"
        android:text="Please sign in to continue using our app"
        android:textColor="#423A30"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/loginemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="Welcome!"
        android:textColor="#423A30"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/pleasesignin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="207dp"
        android:layout_height="163dp"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logofito"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="356dp"
        android:layout_height="62dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#423A30"
        android:textColorHint="#80423A30"
        android:textColorLink="#423A30"
        app:layout_constraintBottom_toTopOf="@+id/loginsignin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginemail"
        tools:ignore="Autofill,HardcodedText,MissingConstraints" />

    <EditText
        android:id="@+id/loginemail"
        android:layout_width="356dp"
        android:layout_height="62dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#423A30"
        android:textColorHint="#80423A30"
        android:textColorLink="#423A30"
        app:layout_constraintBottom_toTopOf="@+id/loginpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pleasesignin"
        tools:ignore="Autofill,HardcodedText,MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>